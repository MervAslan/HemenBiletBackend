@model LoginViewModel

@{
    Layout="_Layout";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}


<div style="background-image: url('/img/gonderisiz8jpg.jpg'); background-size: contain; background-position: center; height: 100vh; position: relative;">
    <div style= "position: absolute; left: 65%; top: 300px; ">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.UserName" class="mr-3" style="color:rgb(189, 173, 82) ; font-size: large;">Kullanici Adı</label>
                <input asp-for="@Model.UserName" class="form-control " style="color: cadetblue;" >
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="mr-3" style="color:rgb(189, 173, 82) ; font-size: large;" >Şifre</label>
                <input type="password" asp-for="@Model.Password" class="form-control" style="color: cadetblue;">
            </div>

            <button type="submit" class="btn btn-warning my-3" style="color: brown; position: absolute; left: 25%;"><b>Giriş Yap</b></button>
        </form>
    </div>

</div>
